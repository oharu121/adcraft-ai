{
  "name": "adcraft-ai",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "release": "tsx scripts/release.ts",
    "build:docker": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:firestore-prod": "tsx scripts/test-firestore-production.ts",
    "deploy:firestore-rules": "node scripts/deploy-firestore-rules.js",
    "docker:build": "docker build -t adcraft-ai .",
    "docker:tag": "docker tag adcraft-ai asia-northeast1-docker.pkg.dev/adcraft-dev-2025/adcraft-ai/adcraft-ai:latest",
    "docker:push": "docker push asia-northeast1-docker.pkg.dev/adcraft-dev-2025/adcraft-ai/adcraft-ai:latest",
    "docker:deploy": "npm run docker:build && npm run docker:tag && npm run docker:push",
    "gcloud:url": "gcloud run services describe adcraft-service --region=asia-northeast1 --project=adcraft-dev-2025 --format=\"value(status.url)\""
  },
  "dependencies": {
    "@google-ai/generativelanguage": "^3.7.0",
    "@google-cloud/aiplatform": "^6.4.0",
    "@google-cloud/firestore": "^8.3.0",
    "@google-cloud/storage": "^7.19.0",
    "@google-cloud/text-to-speech": "^6.4.0",
    "@hookform/resolvers": "^5.2.2",
    "@types/d3": "^7.4.3",
    "@types/ws": "^8.18.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "framer-motion": "^12.34.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "react-player": "^3.4.0",
    "recharts": "^3.7.0",
    "swr": "^2.4.0",
    "tailwind-merge": "^3.4.1",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
