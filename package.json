{
  "name": "adcraft-ai",
  "version": "0.2.2",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "release": "tsx scripts/release.ts",
    "build:docker": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:firestore-prod": "tsx scripts/test-firestore-production.ts",
    "docker:build": "docker build -t adcraft-ai .",
    "docker:tag": "docker tag adcraft-ai gcr.io/adcraft-dev-2025/adcraft-service:latest",
    "docker:push": "docker push gcr.io/adcraft-dev-2025/adcraft-service:latest",
    "gcloud:url": "gcloud run services describe adcraft-service --region=asia-northeast1 --project=adcraft-dev-2025 --format=\"value(status.url)\""
  },
  "dependencies": {
    "@google-ai/generativelanguage": "^3.3.0",
    "@google-cloud/aiplatform": "^5.6.0",
    "@google-cloud/firestore": "^7.11.3",
    "@google-cloud/storage": "^7.17.0",
    "@google-cloud/text-to-speech": "^6.2.0",
    "@hookform/resolvers": "^5.2.1",
    "clsx": "^2.1.1",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}